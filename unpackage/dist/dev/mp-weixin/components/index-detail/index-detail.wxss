.detail {
  padding: 0 0.5rem;
}
.file-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 1rem auto;
}
.file-icon image {
  max-width: 6rem;
  max-height: 6rem;
}
.file-title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  font-weight: 600;
}
.file-info {
  margin: 0.5rem auto;
  display: flex;
  justify-content: center;
  align-items: center;
  column-gap: 1rem;
}
.file-btns {
  display: flex;
  margin: 1rem auto;
}
.file-btns button:nth-child(1) {
  color: #5746af;
  background-color: #ede9fe;
}
.file-btns button:nth-child(2) {
  color: #006adc;
  background-color: #e1f0ff;
}
.file-btns button:nth-child(3) {
  color: #0c7792;
  background-color: #d8f3f6;
}
.file-btns button::after {
  border: none;
}
.file-content button {
  color: #5746af;
  background-color: #ede9fe;
  cursor: pointer;
}