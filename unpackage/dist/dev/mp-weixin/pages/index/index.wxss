@keyframes slideInLeft {
0% {
    opacity: 0.1;
    transform: translateX(-200%);
}
100% {
    opacity: 0.9;
    transform: translateX(0%);
}
}
.content {
  background-color: #f7f8fa;
  width: 100vw;
  height: 100vh;
}
.content .uni-margin-wrap {
  display: none;
}
.content .file-detail {
  background-color: #fff;
  width: 90%;
  margin: 10px auto;
  border-radius: 15px;
  padding: 10px;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.09), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  transform: translateX(-200%);
  animation: slideInLeft 1s ease-in-out 0s forwards;
}
.content .file-nav {
  background-color: #fff;
  width: 95%;
  margin: 0rem auto;
  padding: 1rem 0;
  border-radius: 15px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.09), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  transform: translateX(-200%);
  animation: slideInLeft 0.5s ease-in-out 0s forwards;
}
.content .file-nav .nav-home {
  margin: 0 0.2rem;
  display: flex;
  align-items: center;
  padding: 5px;
}
.content .file-nav .nav-home image {
  max-width: 2rem;
  max-height: 2rem;
  margin-right: 0.2rem;
}
.content .file-nav .nav-item {
  padding: 5px;
  margin: 0 0.2rem;
}
.content .file-nav .nav-home:active,
.content .file-nav .nav-item:active {
  min-height: 2rem;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #e2e3e6;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.09), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
}
.content .file-list {
  width: 90%;
  margin: 1rem auto;
  transform: translateX(-200%);
  animation: slideInLeft 0.5s ease-in-out 0s forwards;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.09), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
}
.content .file-list .list-title {
  height: 2.5rem;
  line-height: 2.5rem;
  background-color: #fff;
  padding: 5px 10px;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  display: grid;
  grid-template-columns: 4fr 2fr 2fr;
}
.content .file-list .list-items {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding-bottom: 0.5rem;
}
.content .file-list .list-items .one-item {
  transform: translateX(-200%);
  animation: slideInLeft 1s ease-in-out 0s forwards;
  padding: 5px;
  background-color: #fff;
  display: grid;
  grid-template-columns: 4fr 2fr 2fr;
  justify-content: center;
  align-items: center;
}
.content .file-list .list-items .one-item .item-name {
  display: flex;
  align-items: center;
}
.content .file-list .list-items .one-item .item-name image {
  max-width: 2rem;
  max-height: 2rem;
  margin-right: 5px;
}
.content .file-list .list-items .one-item .item-name span {
  max-width: 120px;
  transform: translate3d(0, 0, 0);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.content .file-list .list-items .one-item .item-size {
  font-size: 15px;
}
.content .file-list .list-items .one-item .item-btns {
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .file-list .list-items .one-item .item-btns button {
  width: 2.5rem;
  max-height: 2rem;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .file-list .list-items .one-item:active {
  margin: 0 0.3rem;
  background-color: #e9e9ea;
  border-radius: 10px;
  transition: all 0.2s ease 0s;
}
.imgSize {
  width: 100%;
}