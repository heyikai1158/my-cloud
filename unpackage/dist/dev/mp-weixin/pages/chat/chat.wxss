.chat {
  background-color: #171425;
  width: 100vw;
  height: 100vh;
  color: #fff;
}
.chat .chat-items {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.chat .chat-items .chat-item {
  background-color: #2f2c4d;
  display: grid;
  grid-template-columns: 1fr 4fr 1fr;
  overflow-x: scroll;
}
.chat .chat-items .chat-item image {
  max-width: 3rem;
  max-height: 3rem;
}
.chat .chat-items .chat-item .item-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  background-color: #403d5b;
}
.chat .chat-items .chat-item .item-info .item-name {
  font-size: 20px;
  font-weight: 500;
}
.chat .chat-items .chat-item .item-info .item-last-content {
  max-width: 2rem;
  overflow-x: hidden;
}